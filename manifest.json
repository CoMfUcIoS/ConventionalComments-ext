{
  "manifest_version": 2,
  "name": "Conventional Comments for GitHub",
  "version": "1.3.0",
  "description": "Adds a floating panel for Conventional Comments on GitHub Pull Requests with theme support",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*/*/pull/*",
        "*://github.com/*/*/pull/*/files*",
        "*://github.com/*/*/issues/*",
        "*://github.com/*/*/commit/*",
        "*://github.com/*/*/discussions/*"
      ],
      "js": ["content.js"],
      "css": ["color-variables.css", "styles.css", "help-dialog.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"],
  "applications": {
    "gecko": {
      "id": "conventional-comments@example.com"
    }
  }
}
